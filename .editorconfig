# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.ts]
# NestJS style guide: https://docs.nestjs.com/contributing/style-guide
indent_size = 2
indent_style = space
quote_type = single
semi = true
max_line_length = 120

[*.json]
indent_size = 2

